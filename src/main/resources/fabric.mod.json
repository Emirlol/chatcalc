{
	"schemaVersion": 1,
	"id": "chatcalc",
	"version": "${version}",

	"name": "ChatCalc",
	"description": "A simple mod that turns your chat into a calculator.",
	"authors": [
		"RTTV"
	],
	"contributors": [
		"Rime"
	],
	"contact": {
		"sources": "https://github.com/Emirlol/chatcalc",
		"issues": "https://github.com/Emirlol/chatcalc/issues",
		"homepage": "https://modrinth.com/mod/chat-calc-kt"
	},

	"license": "MPL-2.0",
	"icon": "assets/chatcalc/icon.png",

	"environment": "client",
	"entrypoints": {
		"client": [
			{
				"value": "ca.rttv.chatcalc.ChatCalc::init",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"chatcalc.mixins.json"
	],

	"depends": {
		"java": ">=21",
		"minecraft": "${minecraft_version}",
		"fabric-language-kotlin": ">=${fabric_kotlin_version}",
		"fabric-api": ">=${fabric_api_version}"
	}
}
